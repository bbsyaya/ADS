<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/banner_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baiyigame.adslibrary.imageview.RectangleImageView
            android:id="@+id/banner_pic_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/banner_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baiyigame.adslibrary.view.video.FullScreenVideoView
            android:id="@+id/banner_video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/banner_char"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <RelativeLayout
            android:id="@+id/banner_char_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" />

        <com.baiyigame.adslibrary.imageview.CircleImageView
            android:id="@+id/banner_char_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher" />

        <com.baiyigame.adslibrary.view.AutoRollRelativeLayout
            android:id="@+id/anim1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.baiyigame.adslibrary.view.AutoRollRelativeLayout>

    </RelativeLayout>

    <com.baiyigame.adslibrary.imageview.CircleImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/close" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true" />
</RelativeLayout>